<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h2><%= f.label :name, '名前' %></h2>
    <%= f.text_field :name %>
    <div>※ログインしている人にのみ表示されます。</div>
  </div>

  <div class="field">
    <h2><%= f.label :email, '通知先メールアドレス' %></h2>
    <%= f.text_field :email %>
    <div>※メールアドレスは他、ログインした人には見えません。</div>
  </div>

  <div class="actions">
    <%= f.submit '更新' %>
  </div>
<% end %>
